doctype
html
  head
    title Dashboard
    link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css")
    link(rel='stylesheet', href="/css/demo.css")
    script(src="/js/jquery-2.1.1.min.js")
    script(src="/js/demo.js")
  body(bgcolor='danger')
    .container
      script.
        function clicked(){
        document.getElementByID("1").style.background-color = "red";
        }
      center
          h1 Light Control
      h2 Room 1 (Red LED)
      .row.voffset
        .col-md-4
          button.btn.btn-block.btn-lg.btn-primary#1(onclick='clicked()') Light On
        .col-md-4
          button.btn.btn-block.btn-lg.btn-primary#2 Light Off
        .col-md-4
          button.btn.btn-block.btn-lg.btn-primary#3 No Override
      h2 Room 2 (Green LED)
      .row.voffset
        .col-md-4
          button.btn.btn-block.btn-lg.btn-primary#4 Light On
        .col-md-4
          button.btn.btn-block.btn-lg.btn-primary#5 Light Off
        .col-md-4
          button.btn.btn-block.btn-lg.btn-primary#6 No Override
          